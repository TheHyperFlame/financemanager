<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAppDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_theme_light</item>
        <item name="colorPrimaryVariant">@color/light_theme_dark</item>
        <item name="colorOnPrimary">@color/dark_theme_medium</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_theme_medium</item>
        <item name="colorSecondaryVariant">@color/dark_theme_medium</item>
        <item name="colorOnSecondary">@color/dark_theme_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/dark_theme_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/jura</item>
    </style>
</resources>